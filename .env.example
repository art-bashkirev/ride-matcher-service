# Environment configuration for ride-matcher-service
# Copy this file to .env and fill in your actual values

# Required: Yandex Schedules API Key
# Get your API key from: https://tech.yandex.ru/rasp/
YANDEX_SCHEDULES_API_KEY=your_api_key_here

# Required: Telegram Bot Token
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Optional: Override the default Markdown parse mode for outbound Telegram messages
# Values: Markdown, MarkdownV2, HTML
# TELEGRAM_PARSE_MODE=Markdown

# Optional: NVIDIA AI API Key for AI chat mode
# Get your API key from: https://integrate.api.nvidia.com/
NVIDIA_API_KEY=your_nvidia_api_key_here

# Optional: Result timezone (default: Europe/Moscow)
# Available timezones: https://en.wikipedia.org/wiki/List_of_tz_database_time_zones
RESULT_TIMEZONE=Europe/Moscow

# Optional: Environment (default: development)
# Values: development, dev, production, prod
ENVIRONMENT=development

# Required: PostgreSQL connection string
# POSTGRES_URL=postgres://user:password@host:5432/database

# Optional: Cache Configuration
# Cache TTL in seconds
CACHE_TTL_SEARCH=3600      # 1 hour for search results
CACHE_TTL_SCHEDULE=1800    # 30 minutes for schedule results

# Cache key strategy (default: false for hashed keys)
# true = readable keys (easier debugging), false = hashed keys (better performance)
CACHE_READABLE_KEYS=false

# Optional: Redis Configuration
# Preferred: full URL (takes precedence over individual host settings)
# Example for Render: redis://default:yourpassword@your-host:6379/0
# REDIS_URL=

# Fallback host configuration (used only when REDIS_URL is not set)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
# REDIS_USERNAME=
# REDIS_PASSWORD=

# Optional: MongoDB Configuration (defaults shown)
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=ride_matcher
MONGODB_STATIONS_COLLECTION=stations
MONGODB_SEARCH_RESULTS_COLLECTION=user_search_results